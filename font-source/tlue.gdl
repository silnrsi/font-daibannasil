Bidi = 0;

table(glyph)
ANY { breakweight = -30 };
cons = unicode(0x1980..0x19AB) { breakweight = -15 };
prev = unicode(0x19B5..0x19B7, 0x19BA) { breakweight = -15 };
endtable;

table(linebreak)
cons { breakweight = -30 } / prev _ ;
endtable;
